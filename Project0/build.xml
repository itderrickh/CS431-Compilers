<project>
    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes" includeantruntime="false"/>
    </target>

    <target name="run">
        <java classname="Starter.Program" classpath="build/classes"/>
    </target>
    
    <target name="all">
    	<antcall target="clean"></antcall>
	<antcall target="compile"></antcall>
	<antcall target="run"></antcall>
    </target>
</project>